<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClickerMVVM.ClickerPage">

    <Grid>
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="30">

            <!-- Счетчик денег -->
            <Label Text="{Binding Money}" 
                   FontSize="48"
                   FontAttributes="Bold"
                   TextColor="#00f0c0"
                   HorizontalOptions="Center" />

            <!-- Кнопка-картинка ₽ -->
            <Image Source="ruble_icon.svg"
                   WidthRequest="120"
                   HeightRequest="120"
                   HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GetMoneyCommand}" />
                </Image.GestureRecognizers>
            </Image>

        </VerticalStackLayout>
    </Grid>

</ContentPage>
