<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClickerMVVM.StatsPage">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Total Money:" FontSize="24" />
        <Label Text="{Binding TotalMoney}" FontSize="30" />
        <Label Text="Bonus per Click:" FontSize="24" />
        <Label Text="{Binding BonusPerClick}" FontSize="30" />
        
    </VerticalStackLayout>
</ContentPage>