<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClickerMVVM.StocksPage"
             Title="StocksPage">
    
    <CollectionView ItemsSource="{Binding Stocks}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding Name}" FontSize="20" />
                    <Label Text="{Binding Cost, StringFormat = 'Cost: {0}'}" />
                    <Label Text="{Binding Bonus, StringFormat = 'Bonus: {0}'}" />
                    <Button Text="Buy"
                            Command="{Binding PurchaseCommand}"
                            IsEnabled="{Binding IsPurchased, Converter={StaticResource InverseBoolConverter}}" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
